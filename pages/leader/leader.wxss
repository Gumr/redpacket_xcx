/* pages/leader/leader.wxss */

page {
  background: #f7f7f7;
}

.banner {
  width: 750rpx;
  height: 300rpx;
  position: relative;
}

.banner text {
  height: 103rpx;
  font-size: 48rpx;
  font-family: NotoSansHans-Medium;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  text-shadow: 0rpx 2rpx 2rpx rgba(187, 11, 9, 0.5);
  position: absolute;
  top: 0;
  bottom: 0;
  left: 49rpx;
  margin: auto;
  letter-spacing: 5rpx;
  line-height: 1.2;
}

.banner image {
  width: 100%;
  height: 100%;
}

.bulletin {
  width: 670rpx;
  background: #fff;
  margin: 0 auto;
  border-radius: 20rpx 20rpx 0 0;
  position: relative;
  top: -110rpx;
}

/* 未登录 */
.login{
  width: 100%;
  height: 98rpx;
  text-align: center;
}

.login .info{
  height: 98rpx;
  line-height: 98rpx;
}

.tab {
  width: 670rpx;
  height: 86rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid #f2f2f2;
}

.tab .single {
  flex: 1;
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-family: Noto Sans S Chinese;
  font-weight: 500;
  color: rgba(204, 204, 204, 1);
  border-radius: 20rpx;
  position: relative;
}

.tab .single.active{
  color: #333333;
}

.tab .single.active::before {
  display: block;
  content: '';
  width: 66rpx;
  height: 6rpx;
  background: rgba(251, 59, 57, 1);
  border-radius: 3rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

.tab .single:nth-of-type(1) {
  border-radius: 20rpx 0 0 0;
  position: relative;
}

.tab .single:nth-of-type(1)::after {
  position: absolute;
  display: block;
  content: '';
  width: 2rpx;
  height: 60rpx;
  background: rgba(242, 242, 242, 1);
  right: -1rpx;
  top: 0;
  bottom: 0;
  margin: auto;
}

.tab .single:nth-of-type(2) {
  border-radius: 0 20rpx 0 0;
}

.notice {
  margin: 29rpx auto 30rpx;
}

.notice .title {
  font-size: 30rpx;
  font-family: Noto Sans S Chinese;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  margin: 0 auto 18rpx;
  text-align: center;
}

.notice .box {
  width: 610rpx;
  /* height: 120rpx; */
  background: rgba(250, 251, 252, 1);
  border-radius: 6rpx;
  box-sizing: border-box;
  padding: 20rpx 0 20rpx 30rpx;
  font-size: 22rpx;
  font-family: Noto Sans S Chinese;
  font-weight: 400;
  color: rgba(128, 128, 128, 1);
  line-height: 30rpx;
  margin: 0 auto;
}

.award {
  box-sizing: border-box;
  padding: 0 32rpx 0;
}

.award .wrap {
  display: flex;
  justify-content: center;
  padding-bottom: 30rpx;
  border-bottom: 1rpx dashed #e6e6e6;
}

.award .box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 80rpx;
}

.award .box image {
  width: 100rpx;
  height: 100rpx;
}

.award .box .name {
  font-size: 18rpx;
  font-family: Noto Sans S Chinese;
  font-weight: 300;
  color: rgba(51, 51, 51, 1);
  text-align: center;
  margin: 10rpx auto 9rpx;
}

.award .box .sort {
  width: 70rpx;
  height: 22rpx;
  background: rgba(251, 59, 57, 1);
  border-radius: 11rpx;
  font-size: 16rpx;
  font-family: Noto Sans S Chinese;
  font-weight: 300;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 22rpx;
}

.award .box:nth-of-type(2) .sort {
  background: #fa7b32;
}

.award .box:nth-of-type(3) {
  margin-right: 0;
}

.award .box:nth-of-type(3) .sort {
  background: #fab905;
}

.ranking .head {
  box-sizing: border-box;
  padding: 0 0rpx 0 39rpx;
  display: flex;
  align-items: center;
  font-size: 20rpx;
  font-family: Noto Sans S Chinese;
  font-weight: 300;
  color: rgba(153, 153, 153, 1);
  margin: 30rpx auto 0;
}

.ranking .head .name:nth-of-type(1) {
  margin-right: 160rpx;
}

.ranking .head .name:nth-of-type(2) {
  margin-right: 227rpx;
}



.ranking .list_box .list {
  display: flex;
  align-items: center;
  height: 96rpx;
}

.ranking .list_box .list .sequence {
  width: 28rpx;
  height: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #4d4d4d;
  font-size: 21rpx;
  margin: 0 68rpx 0 44rpx;
}

.ranking .list_box .list .info {
  display: flex;
  align-items: center;
  width: 285rpx;
  margin-right: 120rpx;
}

.ranking .list_box .list .info .avatar {
  width: 82rpx;
  height: 96rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 14rpx;
  position: relative;
}

.ranking .list_box .list .info .avatar .tx {
  width: 70rpx;
  height: 70rpx;
  background: rgba(230, 230, 230, 1);
  border-radius: 50%;
}

.ranking .list_box .list .info .nick {
  flex: 1;
  color: #4d4d4d;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow-x: hidden;
  line-height: 1.2;
}

.ranking .list_box .list .num {
  font-size: 28rpx;
  font-family: Noto Sans S Chinese;
  font-weight: 400;
  color: rgba(77, 77, 77, 1);
}

.ranking .list_box .list:nth-of-type(1) .sequence {
  background: #fb3b39;
  color: #fff;
}

.ranking .list_box .list:nth-of-type(2) .sequence {
  background: #fa7b32;
  color: #fff;
}

.ranking .list_box .list:nth-of-type(3) .sequence {
  background: #fab905;
  color: #fff;
}

.ranking .list_box .list .info .avatar .bg1,
.ranking .list_box .list .info .avatar .bg2,
.ranking .list_box .list .info .avatar .bg3 {
  width: 82rpx;
  height: 96rpx;
  position: absolute;
  left: 0;
  top: 0;
}
